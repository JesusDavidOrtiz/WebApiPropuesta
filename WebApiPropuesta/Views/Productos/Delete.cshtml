@model WebApiPropuesta.DTOs.ProductosDTO

@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>Esta segura que quiere eliminar el producto?</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Codigo" />
            <div class="form-group">
                <label asp-for="Descripción" class="control-label"></label>
                <input asp-for="Descripción" class="form-control" disabled />
                <span asp-validation-for="Descripción" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" value="false" asp-for="Estado" disabled /> @Html.DisplayNameFor(model => model.Estado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_fabricación" class="control-label"></label>
                <input asp-for="Fecha_fabricación" class="form-control" disabled/>
                <span asp-validation-for="Fecha_fabricación" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fecha_validez" class="control-label"></label>
                <input asp-for="Fecha_validez" class="form-control" disabled/>
                <span asp-validation-for="Fecha_validez" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cod_proveedor" class="control-label"></label>
                <input asp-for="Cod_proveedor" class="form-control" disabled/>
                <span asp-validation-for="Cod_proveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripción_proveedor" class="control-label"></label>
                <input asp-for="Descripción_proveedor" class="form-control" disabled/>
                <span asp-validation-for="Descripción_proveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonoProveedor" class="control-label"></label>
                <input asp-for="TelefonoProveedor" class="form-control" disabled />
                <span asp-validation-for="TelefonoProveedor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Eliminar producto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
